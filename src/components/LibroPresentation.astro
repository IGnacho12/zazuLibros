---
const { id, nombre, autor, archivo_url, portada_url  } = Astro.props;
---

<article class="w-full max-w-sm bg-white border border-slate-800 shadow-sm dark:bg-gray-800 dark:border-gray-700 transition hover:scale-105">
  <a href={`/libros/${id}`} class="no-underline">
    <img
      class="aspect-4/6 shadow-sm"
      src=`${portada_url}`
      alt={`Portada de ${nombre}`} 
    />
    <div class="px-5 pb-5">
      <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
        {nombre}
      </h5>
      <span class="font-light italic text-slate-600">{autor}</span>
    </div>
  </a>
</article>
